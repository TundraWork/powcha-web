{
  "name": "powcha-web",
  "description": "GDPR compliant, self-hosted CAPTCHA alternative.",
  "version": "0.6.5",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TundraWork/powcha-web"
  },
  "type": "module",
  "keywords": [],
  "files": [
    "dist",
    "dist_external"
  ],
  "main": "./dist/powcha.umd.cjs",
  "module": "./dist/powcha.js",
  "exports": {
    ".": {
      "import": "./dist/powcha.js",
      "require": "./dist/powcha.umd.cjs"
    },
    "./powcha.css": {
      "import": "./dist_external/powcha.css",
      "require": "./dist_external/powcha.css"
    },
    "./external/powcha.js": {
      "import": "./dist_external/powcha.js",
      "require": "./dist_external/powcha.umd.cjs"
    },
    "./external/worker.js": {
      "import": "./dist_external/worker.js",
      "require": "./dist_external/worker.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:bundle && npm run build:external",
    "build:bundle": "rimraf dist && vite build && cp src/declarations.d.ts dist/powcha.d.ts",
    "build:external": "rimraf dist_external && BUILD_EXTERNAL=1 vite build && cp src/declarations.d.ts dist_external/powcha.d.ts",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "format": "prettier --write ./src/**/*",
    "test": "vitest run tests/helpers.test.ts",
    "test:e2e": "playwright test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@tsconfig/svelte": "^5.0.0",
    "@types/node": "^20.11.19",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "husky": "^9.0.11",
    "prettier": "3.2.5",
    "prettier-plugin-svelte": "^3.2.3",
    "rollup-plugin-css-only": "^4.5.2",
    "sass": "^1.71.1",
    "svelte": "^4.2.11",
    "svelte-check": "^3.4.6",
    "tslib": "^2.6.0",
    "typescript": "^5.0.2",
    "vite": "^5.3.0",
    "vitest": "^0.34.6"
  }
}
